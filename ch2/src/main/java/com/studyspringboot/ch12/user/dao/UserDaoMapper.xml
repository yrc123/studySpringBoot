<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studyspringboot.ch12.user.dao.UserDao">
    <select id="findUserByName" resultType="com.studyspringboot.ch12.user.pojo.MyUser">
        select * from t_user
        <where>
            <if test="userName != null">
                user_name='${userName}'
            </if>
        </where>
    </select>
</mapper>
